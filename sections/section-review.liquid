{{ 'section-review-auto.css' | asset_url | stylesheet_tag }}

<div class="review-auto__wrapper">
  <div class="review-auto__header">
    <h1 class="review-auto__title poppins-black">{{ section.settings.title }}</h1>
    <p class="review-auto__description poppins-regular">{{ section.settings.description }}</p>
  </div>
  <div class="swiper mySwiper mySwiper-{{ section.id }}">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'review_card' %}
            <div class="review-auto__card swiper-slide">
              <div class="review-auto__img-wrapper">
                <img src="{{ block.settings.image |  img_url: 'medium' }}" class="review-auto__img">
              </div>
              <div class="review-auto__info">
                <div class="review-auto__star-wrapper">
                  {% render 'icon-star' %}
                  {% render 'icon-star' %}
                  {% render 'icon-star' %}
                  {% render 'icon-star' %}
                  {% render 'icon-star' %}
                </div>
                <p class="review-auto__card-description poppins-regular">{{ block.settings.description }}</p>
                <div class="review-auto__customer-wrapper">
                  <span class="review-auto__name poppins-bold">{{ block.settings.name }}</span>
                  <span class="review-auto__verified-badge poppins-regular">{% render 'icon-right' %} Verified Customer</span>
                </div>
              </div>
            </div>
        {% endcase %}

      {% endfor %}
    </div>

  </div>

</div>

<style>

  .mySwiper-{{ section.id }} swiper

</style>




{{ 'https://unpkg.com/swiper/swiper-bundle.min.js' | script_tag }}

<script>
document.addEventListener('DOMContentLoaded', () => {
  const swiperClass = `.mySwiper-{{ section.id }}`;

  let swiper = new Swiper(swiperClass, {
    centeredSlides: true, // Set to false to avoid centering
    loop: true,
    autoplay: {
      delay: 0,
      disableOnInteraction: false,
      reverseDirection: true,
    },
    grabCursor: true,
    slidesPerView: 'auto',
    spaceBetween: 10,
    freeMode: {
      enabled: true,
      momentum: false,
      momentumBounce: false,
      momentumRatio: 0,
      momentumVelocityRatio: 0,
      sticky: false,
    },
    speed: 10000,
    initialSlide: 0, // Ensure it starts from the first slide
    on: {
      click(e) {
        swiper.slideTo(this.clickedIndex);
      },
    },
  });
});
</script>



