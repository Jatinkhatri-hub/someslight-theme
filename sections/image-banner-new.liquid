{{ 'image-banner-new.css' |  asset_url |  stylesheet_tag }}


<div class="banner__wrapper">
  {% comment %} <div class="banner__img-wrapper">
    
    {{ section.settings.banner_image | image_url: width: section.settings.image.width | image_tag: sizes: sizes, widths: '200,300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200', class: "banner__img" }}
  </div> {% endcomment %}
  <div class="banner-info__wrapper">
    {% for block in section.blocks %} 
      {% case block.type %} 
        {% when 'reviews' %}
          <div class="banner__review-wrapper">
            <div class="review-star__wrapper">
              {%  render 'icon-star' %}
              {%  render 'icon-star' %}
              {%  render 'icon-star' %}
              {%  render 'icon-star' %}
              {%  render 'icon-star' %}
            </div>
            <span class="banner__review-text">{{ block.settings.review-text }}</span>
          </div>
        {% when 'heading' %}
          <h1 class="banner__heading poppins-black">{{ block.settings.heading }}</h1>
        {% when 'subheading' %}
          <h3 class="banner__subheading .poppins-extrabold" 
              style="color: {{ block.settings.subheading_color }};
              
              
              "
          >
            {{ block.settings.subheading }}
          </h3>
      {% endcase %}
    {% endfor %}

  </div>

</div>




{%  schema  %} 
{
  "name": "Bundle Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Background Image"
    }
  ],
  "blocks": [
    {
      "type": "reviews",
      "name": "Reviews",
      "settings": [
        {
          "type": "text",
          "id": "review-text",
          "label": "Text",
          "default": "Review Text"
        }
      ]
    },
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Text",
          "default": "Heading"
        }
      ]
    },
    {
      "type": "subheading",
      "name": "Subheading",
      "settings": [
        {
          "type": "text",
          "id": "subheading",
          "label": "Text",
          "default": "Subheading"
        },
        {
          "type": "color",
          "id": "subheading_color",
          "label": "Text Color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "background_color",
          "label": "Background Color",
          "default": "#ffffff"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Bundle Banner"
    }
  ]
}

{% endschema %} 